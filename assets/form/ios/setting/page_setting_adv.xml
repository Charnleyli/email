            <ui class="linearlayout" height="fill_parent" width="fill_parent">
                <ui class="navigateitem" id="tab_back" image="icon_navigatebar_arrow_left" text="" layout_gravity="left|vcenter" type="left" width="40" height="40" action="close"/>
            </ui>
            <ui class="view" width="fill_parent" height="1" weight="1" view="0" showrect="1" bgcolor="gray9" layout_gravity="bottom|vcenter"/>
        </ui>
    </ui>
	<!--Option-->
	<simplelistbox class="simplelistbox" id="system_setting" width="fill_parent" height="0" weight="1" item_height="60" bgcolor="gray10" separator="line">


		<ui class="linearlayout" width="fill_parent" height="60" background="empty" bgcolor="white">
			<textview class="textview" text="Showing name" font="16n" color="black" width="0" weight="1" height="wrap_content" margin="5,0,0,0" layout_gravity="left|vcenter"/>
			<combobox class="combobox" id="use_name" text="Button" font="16n" color="blue1" width="wrap_content" height="fill_parent" layout_gravity="left|vcenter"   bgcolor="white">
				<ui class="framelayout" width="fill_parent" height="48" background="bg_emenu_cell" >
					<textview class="textview" id="title" text="Use email name" font="16n" color="blue1" width="wrap_content" height="wrap_content" margin="0,0,0,0" layout_gravity="center|vcenter"/>
				</ui>
				<ui class="framelayout" width="fill_parent" height="48" background="bg_emenu_cell" >
					<textview class="textview" id="title" text="Use contact name" font="16n" color="blue1" width="wrap_content" height="wrap_content" margin="0,0,0,0" layout_gravity="center|vcenter"/>
				</ui>
			</combobox>
		</ui>

		<ui id="showNameLabel" class="framelayout" width="fill_parent" height="20" background="empty" bgcolor="gray10">
			<textview class="textview" text="Showing name" width="wrap_content" height="wrap_content" font="14n" color="gray5" margin="20,0,0,0" layout_gravity="left|vcenter" isview="0"/>
		</ui>
		
		<ui id="gmail_panel" class="framelayout" width="fill_parent" height="60" background="empty" bgcolor="white">			
			<ui class="checkbox" id="use_cont_name_reply" width="26" height="26" layout_gravity="right|vcenter" margin="20,0,30,0" />
			<textview class="textview" text="Reply using contact name" font="16n" color="black" width="wrap_content" height="wrap_content" margin="20,0,0,0" layout_gravity="left|vcenter"/>

		</ui>

	</simplelistbox>
	<!-- end-->
</ui>
</root>
	
	
	