<?xml version="1.0" encoding="utf-8"?>
<root id="main" padding="0,0,0,0" width="screen" height="screen" bgcolor="gray10">
<ui class="vlinearlayout" width="fill_parent" height="fill_parent" >
	<ui class="navigatebar" height="56" id="navigatebar" width="fill_parent" bgcolor="white">
        <ui class="framelayout" height="fill_parent" width="fill_parent" >
            <ui class="linearlayout" height="fill_parent" width="fill_parent">
                <ui class="navigateitem" id="tab_back" image="icon_navigatebar_arrow_left" text="" layout_gravity="left|vcenter" type="left" width="40" height="40" action="close"/>
            </ui>
            <ui class="view" width="fill_parent" height="1" weight="1" view="0" showrect="1" bgcolor="gray9" layout_gravity="bottom|vcenter"/>
        </ui>
    </ui>
	<!--Option-->
	<simplelistbox class="simplelistbox" id="system_setting" width="fill_parent" height="0" weight="1" item_height="60" separator="line">
		<ui class="framelayout" width="fill_parent" id="btn_down" height="20" isview="0" background="empty" bgcolor="gray10">
			<textview class="textview" width="wrap_content" height="wrap_content" text="Language" font="14n" color="gray5" layout_gravity="left|vcenter" margin="20,0,0,0"/>
		</ui>
		<!-- langages -->
		<ui class="linearlayout" width="fill_parent" height="60" background="empty" bgcolor="white"> 
			<textview class="textview" width="0" weight="1" height="wrap_content" text="Language" font="16n" color="black" margin="20,0,0,0" layout_gravity="left|vcenter"/>
			<combobox class="combobox" id="lang_cbx" text="Button" width="100" height="fill_parent" margin="0,0,0,0" color="blue1" windowbg="bg_white">
				<ui class="framelayout" width="fill_parent" height="48" background="bg_emenu_cell" >
					<textview class="textview" id="title" text="English" font="16n" color="blue1" width="wrap_content" height="wrap_content" margin="0,0,0,0" layout_gravity="center|vcenter"/>
				</ui>
				<ui class="framelayout" width="fill_parent" height="48" background="bg_emenu_cell" >
					<textview class="textview" id="title" text="中文" font="16n" color="blue1" width="wrap_content" height="wrap_content" margin="0,0,0,0" layout_gravity="center|vcenter"/>
				</ui>
			</combobox>
		</ui>

		<ui class="framelayout" width="fill_parent" height="20" isview="0" background="empty" bgcolor="gray10">
			<textview class="textview" width="wrap_content" height="wrap_content" text="Gmail" font="14n" color="gray5" layout_gravity="left|vcenter" margin="20,0,0,0"/>
		</ui>

		<!-- Gmail Customize  -->
		<ui class="linearlayout" width="fill_parent" height="60" id="gmail_panel" background="empty" bgcolor="white">
			<textview class="textview" width="0" weight="1" height="wrap_content" text="Gmail Boost" font="16n" color="black"  margin="20,0,0,0" layout_gravity="left|vcenter"/>
			<ui class="checkbox" id="gmail_boost" width="26" height="26" layout_gravity="right|vcenter" margin="20,0,30,0"  bgcolor="white" />
		</ui>

		<!-- clean cache-->
		<ui class="framelayout" width="fill_parent" height="20" isview="0" background="empty" bgcolor="gray10">
		</ui>

		<ui class="linearlayout" width="fill_parent" height="60" id="clean_cache" background="empty" bgcolor="white">
			<textview class="textview" width="0" weight="1" height="wrap_content" text="Clean local cache" font="16n" color="black"  margin="20,0,0,0" layout_gravity="center|vcenter"/>
		</ui>

		<!-- YoLock-->
		<ui class="framelayout" width="fill_parent" height="20" isview="0" background="empty" bgcolor="gray10" visible="0">
		</ui>

		<ui class="linearlayout" width="fill_parent" height="60" id="lock" background="empty" bgcolor="white" visible="0">
			<textview class="textview" width="0" weight="1" height="fill_parent" text="Gesture password and fingerprint" font="16n" color="black"  margin="20,0,0,0"/>
		</ui>

	</simplelistbox>
	<!-- end-->
</ui>
</root>
	
	
	
